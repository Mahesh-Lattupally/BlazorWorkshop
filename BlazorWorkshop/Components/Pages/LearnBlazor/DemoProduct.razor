@page "/learnBlazor/demoproduct"

<h2 class="text-primary">DemoProduct</h2>
<div class = "p-2 mt-2">
    <div class="row">
        @foreach (var product in lstProducts)
        {
            <div class="bg-light border col-6">
                <h4 class="text-secondary">Product - @product.Id</h4>
                Name - @product.Name
                <br />
                Show Properties : 
                <input type="checkbox" @bind="product.IsActive" />
                <br />
                @if (product.IsActive)
                {
                    @foreach (var property in product.ProductProperties)
                    {
                        <p> @property.Key - @property.Value </p>
                    }
                }
                <br />
                <input type="button" class="btn btn-danger" style="width:100px" value="Delete" /> 
            </div>
        }
    </div>
</div>

@code {
    List<Product> lstProducts = new();

    protected override void OnInitialized()
    {
        lstProducts.Add(new()
        {
            Id = 1,
            Name = "Midnight Blaze",
            IsActive = false,
            Price = 5.99,
            ProductProperties = new List<Product_Prop>()
                {
                    new Product_Prop { Id = 1, Key = "Flavor", Value = "Rose"},
                    new Product_Prop { Id = 2, Key = "Size", Value = "20oz"},
                    new Product_Prop { Id = 3, Key = "Color", Value="Purple" }
                }
        });

        lstProducts.Add(new()
        {
            Id = 2,
            Name = "Blossom Lily",
            IsActive = true,
            Price = 10.59,
            ProductProperties = new List<Product_Prop>()
                {
                    new Product_Prop { Id = 1, Key = "Flavor", Value = "Lily" },
                    new Product_Prop { Id = 2, Key = "Size", Value = "18oz" },
                    new Product_Prop {Id = 3,Key = "Color",Value = "White"}
                }
        });
    }
}
